{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Extension",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/src/extension"
        ],
        "outFiles": ["${workspaceFolder}/src/extension/out/**/*.js"],
        "preLaunchTask": "npm: watch",
        "sourceMaps": true
      }
    ]
  }
  